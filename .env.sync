# Variáveis de ambiente para garantir que produção funcione exatamente como desenvolvimento
# Baseado nas configurações padrão em src/env.ts

# Configuração de ambiente
NODE_ENV=production

# Configurações de servidor
PORT=3000
API_BASE_URL=https://looton-backend.onrender.com

# Configurações de cache e banco de dados
USE_REDIS=true
REDIS_URL=redis://localhost:6379
REDIS_REQUIRE_NOEVICTION=false

# Configurações de moeda
CURRENCY_BASE=BRL
CURRENCY_REFRESH_CRON=0 3 * * *

# Configurações de atualização de ofertas
DEALS_REFRESH_CRON=*/20 * * * *

# Configurações de rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# Configurações de mock (desativar em produção para dados reais)
USE_MOCK_ADAPTERS=false

# Configurações de curadoria
CURATION_CC=BR
CURATION_LANG=portuguese
CURATION_WINDOW_HOURS=24
CURATION_MIN_DISCOUNT=20
CURATION_ROTATION_COOLDOWN_HOURS=72
CURATION_FEED_SIZE=30
CURATION_CRON=*/30 * * * *
ROTATION_FILE=.rotation_memory.json

# Configurações de cache
CACHE_TTL_SECONDS=900
OFFERS_EXPIRATION_DAYS=7
OFFERS_CLEANUP_CRON=0 */6 * * *

# Configurações específicas de hardware PC
PC_CUR_MIN_DISCOUNT=10        # Valor alterado para igualar o .env.example
PC_CUR_ROTATION_COOLDOWN_HOURS=72
PC_CUR_FEED_SIZE=40
PC_CUR_CRON=*/30 * * * *
PC_ROTATION_FILE=.pc_rotation.json
PC_CACHE_TTL_SECONDS=900
PC_FULL_CACHE_TTL_SECONDS=600

# Configurações de filtro de hardware
PC_USE_KEYWORD_FILTER=false    # Valor alterado para igualar o .env.example

# Configurações de lojas de hardware
